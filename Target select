import tkinter as tk
from tkinter import messagebox


class TargetPlayerListGUI:
    def __init__(self, root):
        self.root = root
        self.root.title("Target Player List Select GUI")

        self.players = ["Player 1", "Player 2", "Player 3", "Player 4"]
        self.selected_player = tk.StringVar()

        self.create_widgets()

    def create_widgets(self):
        tk.Label(self.root, text="Select a Target Player:").pack(pady=10)

        for player in self.players:
            rb = tk.Radiobutton(
                self.root,
                text=player,
                variable=self.selected_player,
                value=player,
                indicatoron=False,
                command=self.on_select,
                width=20,
                pady=5
            )
            rb.pack(pady=2)

        self.confirm_button = tk.Button(self.root, text="Confirm Selection", command=self.confirm_selection)
        self.confirm_button.pack(pady=20)

    def on_select(self):
        for widget in self.root.winfo_children():
            if isinstance(widget, tk.Radiobutton):
                if widget.cget("value") == self.selected_player.get():
                    widget.config(bg="green")
                else:
                    widget.config(bg="SystemButtonFace")

    def confirm_selection(self):
        if self.selected_player.get():
            messagebox.showinfo("Selection", f"Selected Player: {self.selected_player.get()}")
        else:
            messagebox.showwarning("Selection", "No player selected!")


if __name__ == "__main__":
    root = tk.Tk()
    app = TargetPlayerListGUI(root)
    root.mainloop()
